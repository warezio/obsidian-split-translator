{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill-obsidian",
            "type": "shell",
            "command": "pkill -f Obsidian || true",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "build:debug",
            "type": "shell",
            "command": "node esbuild.config.mjs --debug",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "kill-and-build",
            "dependsOn": [
                "kill-obsidian",
                "build:debug"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "dev",
            "type": "shell",
            "command": "node esbuild.config.mjs --watch --debug",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^> (.+):(\\d+):(\\d+): (error|warning): (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[watch\\]",
                    "endsPattern": "^\\[watch\\]"
                }
            }
        }
    ]
}
